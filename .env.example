# Configurazione Precettore - AI Prompt Tutor
# Copia questo file in .env e inserisci i tuoi valori reali

# OpenAI API Key (obbligatoria)
# Ottienila da: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Django Secret Key (opzionale, verr√† generata automaticamente se non specificata)
# Per produzione, genera una chiave sicura con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=

# Django Debug Mode (opzionale, default: True in development)
# In produzione impostare sempre a False
DEBUG=True

# Allowed Hosts (opzionale, per produzione)
# Esempio: ALLOWED_HOSTS=example.com,www.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL (opzionale, default: SQLite locale)
# Esempio PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_URL=
